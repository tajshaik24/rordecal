<form action="/students/new" method="POST">
  <label>Full name</label>
  <input
    name="full_name"
    placeholder= "<%= @placeholder_name %>"
    type="text">
    </input>

  <label>Gender</label>
  <input
    name="gender"
    placeholder= "<%= @placeholder_gender %>"
    type="text">
    </input>

  <label>Year</label>
  <input
    name="year"
    placeholder= "<%= @placeholder_year %>"
    type="text">
    </input>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit">Create students</button>
</form>
